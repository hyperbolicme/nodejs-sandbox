<head>
    <title> <%= title %> </title>
    <link rel="stylesheet" type="text/css" href="/css/style.css"> 
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>

</head>
<body>
    <div class="container">
        <h1> <%= title %> </h1>

        <fieldset class = qa>
            Show directory.
            <form action="/search-result-qa" method="post">
                <button class = qa onclick="/search-result-qa">Go</button>
            </form>
        </fieldset>

        <fieldset>
            <form action="/search-result" method="post">
                <input name="id" type="number" class="ghost-input" placeholder="Enter Student ID">
                <input name="name" type="text" class="ghost-input" placeholder="Enter Name">
                <input name="course" type="text" class="ghost-input" placeholder="Enter Course">
                <input type="submit" class="ghost-button" value="Search Directory">
            </form>
        </fieldset>
    </div>
</body>
